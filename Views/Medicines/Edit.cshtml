@model AppMedicineTracker.Models.Medicine

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Medicine</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <div class="custom-control custom-switch">
                    <input asp-for="Suspend" class="custom-control-input" id="SuspendSwitch" />
                    <label class="custom-control-label" for="SuspendSwitch"> Suspend taking medicine</label>
                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dose" class="control-label"></label>
                <input asp-for="Dose" class="form-control" />
                <span asp-validation-for="Dose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Form" class="control-label"></label>
                <input asp-for="Form" class="form-control" />
                <span asp-validation-for="Form" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instructions" class="control-label"></label>
                <textarea asp-for="Instructions" class="form-control js-textarea-count" maxlength="280"></textarea>
                <div class="character-counter-container"><span class="character-current-count js-current-count">0</span> / <span class="character-max-count">280</span></div>
                <span asp-validation-for="Instructions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supply" class="control-label"></label>
                <input asp-for="Supply" class="form-control" />
                <span asp-validation-for="Supply" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Refills" class="control-label"></label>
                <input asp-for="Refills" class="form-control" />
                <span asp-validation-for="Refills" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Condition" class="control-label"></label>
                <input asp-for="Condition" class="form-control" />
                <span asp-validation-for="Condition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrescribedBy" class="control-label"></label>
                <input asp-for="PrescribedBy" class="form-control" />
                <span asp-validation-for="PrescribedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Frequency" class="control-label"></label>
                <input asp-for="Frequency" class="form-control" />
                <span asp-validation-for="Frequency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DaysOn" class="control-label"></label>
                <input asp-for="DaysOn" class="form-control" />
                <span asp-validation-for="DaysOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DaysOff" class="control-label"></label>
                <input asp-for="DaysOff" class="form-control" />
                <span asp-validation-for="DaysOff" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control js-textarea-count" maxlength="280"></textarea>
                <div class="character-counter-container"><span class="character-current-count js-current-count">0</span> / <span class="character-max-count">280</span></div>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="ImagePath" class="control-label"></label>
                <input type="hidden" asp-for="ImagePath" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="User" class="control-label"></label>
                <input type="hidden" asp-for="User" class="form-control" />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
